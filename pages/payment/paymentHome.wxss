/* pages/payment/paymentHome.wxss */

.paymentContent {
  display: flex;
  flex-direction: column;
  justify-content: center;
  -webkit-display: flex;
  -webkit-flex-direction: column;
  -webkit-justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  background-color: #efefef;
}

.paymentContent .section1 {
  display: flex;
  flex-direction: column;
  justify-content: center;
  -webkit-display: flex;
  -webkit-flex-direction: column;
  -webkit-justify-content: center;
  align-items: center;
  width: 100%;
  background-color: white;
  margin-bottom: 30rpx;
}

.paymentContent .section1 .topImage {
  margin-top: 30rpx;
  margin-left: 45rpx;
  margin-bottom: 30rpx;
  padding-right: 240rpx;
  width: 60%;
}

.paymentContent .section1 .desc {
  width: 85%;
  margin: 30rpx;
}

.paymentContent .section1 .button1 {
  display: flex;
  flex-direction: column;
  justify-content: center;
  -webkit-display: flex;
  -webkit-flex-direction: column;
  -webkit-justify-content: center;
  align-items: center;
  width: 85%;
  height: 100rpx;
  margin: 30rpx;
  background-color: #C28FC2;
  border-radius: 40rpx;
}

.paymentContent .section2 {
  display: flex;
  flex-direction: column;
  justify-content: center;
  -webkit-display: flex;
  -webkit-flex-direction: column;
  -webkit-justify-content: center;
  align-items: center;
  width: 100%;
  background-color: white;
}

.paymentContent .section2 .vipItems {
  display: flex;
  flex-direction: column;
  justify-content: center;
  -webkit-display: flex;
  -webkit-flex-direction: column;
  -webkit-justify-content: center;
  /* align-items: center; */
  width: 100%;
}

.paymentContent .section2 .vipSubItems {
  position: relative;
  width: 100%;
  height: 200rpx;
}

.paymentContent .section2 .vipSubItems .item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  -webkit-display: flex;
  -webkit-flex-direction: column;
  -webkit-justify-content: center;
  /* align-items: center; */
  position: absolute;
  left: 240rpx;
  top: 30rpx;
  width: 60%;
  height: 140rpx;
  background-color:white;
}

.paymentContent .section2 .text1 {
  font-size: 35rpx;
}

.paymentContent .section2 .text2 {
  font-size: 25rpx;
  color: #8A8A8A;
}

.paymentContent .section2 .vipItems image {
  width: 100%;
  height: 200rpx;
}

.paymentContent .section2 .button2 {
  display: flex;
  flex-direction: column;
  justify-content: center;
  -webkit-display: flex;
  -webkit-flex-direction: column;
  -webkit-justify-content: center;
  align-items: center;
  width: 100%;
  height: 200rpx;
  margin-top: 30rpx;
  background-color: #C28FC2;
}