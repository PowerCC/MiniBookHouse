/* pages/order/returnOrder.wxss */
@import '../../pages/templates/dataEmptyTemplate.wxss';
@import '../../pages/home.wxss';

.orderList {
  display: flex;
  flex-direction: column;
  justify-content: center;
  -webkit-display: flex;
  -webkit-flex-direction: column;
  -webkit-justify-content: center;
}

.orderListItem {
  display: flex;
  flex-direction: column;
  justify-content: left;
  -webkit-display: flex;
  -webkit-flex-direction: column;
  -webkit-justify-content: left;
  width: 100%;
  font-size: 25rpx;
  text-align: left;
  align-items: center;
  color: #696969;
  margin: 20rpx;
}

.orderListItem .goods {
  display: flex;
  flex-direction: row;
  justify-content: left;
  -webkit-display: flex;
  -webkit-flex-direction: row;
  -webkit-justify-content: left;
  width: 100%;
  font-size: 25rpx;
  text-align: left;
  color: #696969;
  margin: 20rpx;
}

.orderListItem .goods image {
  width: 20%;
  height: 100%;
  border: 1px solid #ECF0F1;
  border-radius: 10rpx;
}

.orderListItem .goods .text1 {
  width: 57%;
  height: 100%;
  word-wrap: break-word;
  padding-left: 30rpx;
  /* background-color: yellow; */
}

.orderListItem .goods .text2 {
  text-align: right;
  height: 100%;
  /* background-color: red; */
  padding-left: 30rpx;
}

.orderListItem text {
  width: 100%;
  margin-bottom: 20rpx;
}

.line {
  background: #e0e3da;
  width: 100%;
  height: 2rpx;
}
