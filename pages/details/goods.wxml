<!--pages/detail/goods.wxml-->
<view class="container" style='margin:30rpx 30rpx {{pageBottom}} 30rpx;'>
  <scroll-view scroll-y style='height{{scrollViewHeight}}px;'>
    <view class="up">
      <view class="left">
        <image src="{{goodsInfo.img}}" mode='widthFix'></image>
      </view>
      <view class="right">
        <view>{{goodsInfo.name}}</view>
        <view>作者：{{goodsInfo.author}}</view>
        <view>出版社：{{goodsInfo.press}}</view>
        <view>语言：{{goodsInfo.language}}</view>
        <view>年龄：{{goodsInfo.age}}</view>
        <view>分类：{{goodsInfo.category}}</view>
      </view>
    </view>

    <view class="clear"></view>

    <view class="down">

      <view>图文详情</view>
      <view class='line'>【内容简介】</view>
      <rich-text nodes="{{goodsInfo.content}}"></rich-text>
      <view class='line'>【内页详情】</view>
      <view class='imgShow'>
        <view class='item' wx:for="{{goodsInfo.img_list}}">
          <image src='{{item}}' mode='aspectFix'></image>
        </view>
      </view>

    </view>
  </scroll-view>
  <!-- 分割线 -->
  <view class="divLine"></view>
  <view class='bottom-flex'>
    <view>
      <button class='buttonA'>打开书包</button>
    </view>
    <view>
      <button class='buttonB'>加入书包</button>
    </view>
  </view>

</view>